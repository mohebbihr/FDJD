#!/bin/bash

# Version 1.0 by Hamidreza Mohebbi - Feburary 2017
# Script to pre-process files generated by ssejaccard for MapReduce step.
# Pre-processing adds information about reads and reference chromosome

# Script parameters 
SRCJAR=ssejaccardPP.jar
MANIFEST=manifest.txt

# Set environment variables
export PATH=$PATH:/usr/lib/jdk1.7.0_25/bin

# Compile MP_PreProcess and create executable jar
echo "Compiling jaccardPP source code.."
javac *.java

echo "Creating ssejaccardPP jar.."

echo

jar cvfm $SRCJAR $MANIFEST *.class

exit 0 


